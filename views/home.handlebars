<div class="jumbotron jumbotron-fluid" id="wrapper">
	<div class="container">
		<h1 class="display-4">Awesome Articles</h1>
		<button class="btn btn-primary btn-lg" id="scrapeBtn" role="button">Check CS Blog</button>
		<hr class="my-4">
		<div class="align-middle" id="headlines">
			{{#each headline}}
				<div class="headline" articleId="{{_id}}">
					<img class="w-100" src="{{image}}">
					<h2 class="text-center my-2">{{title}}</h2>
					<p class="lead text-justify m-0">{{summary}}</p>
					<div class="row">
						<div class="col text-right">
							<p class="badge badge-pill badge-secondary m-0">Click for More</p>
						</div>
					</div>
				</div>
				<hr class="my-4">
			{{/each}}
		</div>
		<button class="btn btn-danger btn-sm" id="clearBtn" role="button">DELETE ALL</button>
	</div>
</div>